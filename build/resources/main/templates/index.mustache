{{>layout/header}}

    <div id="bard">

        <div id="bard_tab">
            <table id="tb_main">
                <thead>
                <tr>
                    <th class="td1">게시글번호</th>
                    <th class="td1">제목</th>
                    <th class="td1">작성자</th>
                    <th>최종수정일</th>
                </tr>
                </thead>
                <tbody id="tbody" >
                {{#posts}}
                    <tr style="text-align: center">
                        <td class="td2">{{id}}</td>
                        <td class="td2"><a href="/posts/update/{{id}}"> {{title}}</a></td>
                        <td class="td2">{{author}}</td>
                        <td style="border-top: 1px solid black" >{{modifiedDate}}
                           </td>
                    </tr>
                {{/posts}}
                </tbody>
            </table>
        </div>

        <div id="bard_bt">
            <div style="top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    position: absolute;">
                <a href="/posts/save" target="if_a" role="button" style="font-size: 2em;">글등록</a>
            </div>
        </div>
    </div>
{{>layout/footer}}